{
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "outDir": "dist",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
